<% layout("/layouts/boilerplate") %>

    <div class="row mt-3">
        <div class="col-8 offset-3">
            <h3>Leave a Review for</h3><br>
            <h5>
                <%=listing.title %>
            </h5>

            <div class="card mt-1" style="width: 40rem; border: none !important;">
                <div class="col-12">
                    <img style="width: 40rem; height: 20rem;" src="<%=listing.image.url %>"
                        class="card-img-top show-img showCard " alt="<%=listing.image.filename %>">
                </div>
                <div class="card-body ">
                    <p class="card-text mt-2">
                        &#8377; <%=listing.price.toLocaleString("en-IN") %> <br>
                            <%=listing.description %> <br>
                                <%=listing.location %> <br>
                                    <%=listing.country %> <br>
                    </p>
                    <br>
                </div>
            </div>
        </div>

        <hr />
        <div class="row">
            <div class="col-10 offset-3 "style="width: 50rem; !important">
                <form action="/listings/<%=listing._id%>/reviews" method="POST" novalidate class="needs-validation">
                    <!-- <div class="mb-3">
                        
                        <input type="range" id="rating" min="1" max="5" name="review[rating]" class="form-range"
                            style="width: 15rem;">
                    </div> -->
                    <div class="mb-3">
                        <label for="rating" class="form-label"><h6>Your Rating: </label></h6>
                        <fieldset class="starability-slot" style="display:inline-flex; justify-content: flex-start;">
                            <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
                            <input type="radio" id="second-rate1" name="review[rating]" value="1" />
                            <label for="second-rate1" title="Terrible">1 star</label>
                            <input type="radio" id="second-rate2" name="review[rating]" value="2" />
                            <label for="second-rate2" title="Not good">2 stars</label>
                            <input type="radio" id="second-rate3" name="review[rating]" value="3" />
                            <label for="second-rate3" title="Average">3 stars</label>
                            <input type="radio" id="second-rate4" name="review[rating]" value="4" />
                            <label for="second-rate4" title="Very good">4 stars</label>
                            <input type="radio" id="second-rate5" name="review[rating]" value="5" />
                            <label for="second-rate5" title="Amazing">5 stars</label>
                        </fieldset>
                        </div>
                    
                    <div class="mb-3">
                        <label for="comment" class="form-label">Comment:</label>
                        <textarea id="comment" name="review[comment]" placeholder="Leave your comment here.." required
                            rows="3" cols="30" class="form-control"></textarea>
                        <div class="invalid-feedback">Please enter a valid comment!</div>
                    </div>

                    <button type="submit" class="btn btn-outline-dark mt-2">Submit Review</button>
                </form>
                <br>
            </div>
        </div>
    </div>